        <script>
const ctx = document.getElementById('myChart');

new Chart(ctx, {
  type: 'doughnut',
  data: {
    labels: ['Online Payments', 'Cash on Delivery', 'Wallet Pay'],
    datasets: [{
      label: 'Number of payments',
      data: [12, 19, 3],
      borderWidth: 1
    }]
